# Production Environment Variables
# Copy this file to .env and update the values

# Hugging Face API Token (required for ML analysis)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=1

# Frontend Configuration
FRONTEND_PORT=80

# Security
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,https://yourdomain.com

# Logging
LOG_LEVEL=INFO
